<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.devopstcplugin</id>
  <name>DevOpsTCPlugin</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Krzysztof Rutana</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>The action allows you to assign test information to the Associated Automation tab in Azure Test Case
</p>
]]>
  </description>

    <actions resource-bundle="messages.RiderPluginActionsBundle">
        <action id="AssignTestToTestCase" class="com.jetbrains.rider.plugins.devopstcplugin.actions.AssignTestToTestCaseAction">
            <keyboard-shortcut keymap="$default" first-keystroke="shift control Y"/>
            <keyboard-shortcut keymap="Visual Studio" first-keystroke="shift control Y"/>
            <keyboard-shortcut keymap="Visual Studio OSX" first-keystroke="shift meta Y"/>
        </action>
    </actions>

</idea-plugin>
